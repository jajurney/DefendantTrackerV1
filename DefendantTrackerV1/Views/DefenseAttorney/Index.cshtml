@model IEnumerable<DefendantTracker.Models.DefenseAttorneyModels.DefenseAttorneyListItem>

@{
    ViewBag.Title = "Index";
}
<p>
    <h3>Defense Attorneys</h3>
    <h4>Here you will find a list of all the Defense Attorneys in our system.</h4>
    @Html.ActionLink("Add New Defense Attorney", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DefenseAttorneyID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DefenseAttorneyID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.DefenseAttorneyID }) |
        @Html.ActionLink("Details", "Details", new { id = item.DefenseAttorneyID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.DefenseAttorneyID })
    </td>
</tr>
    }

</table>
<style>
    table {
        text-align: center;
        font-size: 18px;
    }

    h3 {
        margin-top: 70px;
        font-size: 40px;
    }
</style>