@model IEnumerable<DefendantTracker.Models.ConvictionModels.ConvictionListItem>

@{
    ViewBag.Title = "Index";
}
<p>
    <h3>Convictions</h3>
    <h4>Here is a list of all the Convictions we are aware of currently.</h4>
    @Html.ActionLink("Add New Conviction", "Create")
</p>
<table class="table-responsive table pull-left">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ConvicID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.County)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zipcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfConviction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConvictionSeverity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrestID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourtHearingID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ConvicID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.County)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zipcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfConviction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConvictionSeverity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrestID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourtHearingID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ConvicID })
                @Html.ActionLink("Details", "Details", new { id = item.ConvicID }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.ConvicID })
            </td>
        </tr>
    }

</table>
<style>
    table {
        text-align: left;
        font-size: 18px;
    }

    h3 {
        margin-top: 70px;
        font-size: 40px;
    }
</style>